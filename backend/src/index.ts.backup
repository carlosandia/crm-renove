// Middleware para forÃ§ar headers CORS corretos
app.use((req, res, next) => {
  const origin = req.headers.origin;
  const allowedOrigins = [
    'http://localhost:8080',
    'http://127.0.0.1:8080', 
    'http://localhost:3000',
    'http://127.0.0.1:3000',
    'http://localhost:5173',
    'http://127.0.0.1:5173'
  ];

  // Definir headers CORS corretos
  if (!origin || allowedOrigins.includes(origin)) {
    res.header('Access-Control-Allow-Origin', origin || '*');
  }
  
  res.header('Access-Control-Allow-Credentials', 'true');
  res.header('Access-Control-Allow-Methods', 'GET, POST, PUT, DELETE, OPTIONS, PATCH, HEAD');
  
  // FORÃ‡A os headers permitidos corretos
  res.header('Access-Control-Allow-Headers', 
    'Content-Type, Authorization, X-Requested-With, Accept, Origin, X-User-ID, X-User-Role, X-Tenant-ID, Cache-Control, Pragma, X-Cache-Control, If-None-Match, If-Modified-Since'
  );
  
  res.header('Access-Control-Max-Age', '86400');

  if (req.method === 'OPTIONS') {
    console.log(`âœ… [CORS] Preflight OPTIONS para ${req.path} - Origin: ${origin}`);
    console.log(`âœ… [CORS] Headers permitidos: Content-Type, Authorization, Cache-Control, etc.`);
    res.status(200).end();
    return;
  }
  
  next();
});

