{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,

    /* ============================================ */
    /* ðŸ”§ CATEGORIA 7.1: STRICT MODE MELHORADO    */
    /* ============================================ */
    "strict": true,                           // âœ… Base strict mode
    "noImplicitAny": true,                   // âœ… ExplÃ­cito: proÃ­be 'any' implÃ­cito
    "noImplicitReturns": true,               // âœ… NOVO: forÃ§a return explÃ­cito
    "noUncheckedIndexedAccess": true,        // âœ… NOVO: force checking de index access
    
    /* Type Safety Adicional */
    "exactOptionalPropertyTypes": true,      // âœ… NOVO: strict optional properties
    "noImplicitOverride": true,              // âœ… NOVO: forÃ§a override keyword
    "noPropertyAccessFromIndexSignature": true, // âœ… NOVO: force bracket notation
    
    /* Code Quality */
    "allowUnreachableCode": false,           // âœ… NOVO: proÃ­be cÃ³digo inacessÃ­vel
    "allowUnusedLabels": false,              // âœ… NOVO: proÃ­be labels nÃ£o utilizados
    "forceConsistentCasingInFileNames": true, // âœ… NOVO: forÃ§a case sensitivity

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting Aprimorado */
    "noUnusedLocals": false,                 // Mantido false para desenvolvimento
    "noUnusedParameters": false,             // Mantido false para desenvolvimento
    "noFallthroughCasesInSwitch": true,     // âœ… Mantido
    "noImplicitThis": true,                  // âœ… NOVO: forÃ§a this explÃ­cito
    
    /* Compatibility & Performance */
    "useUnknownInCatchVariables": true,      // âœ… NOVO: catch variables sÃ£o unknown
    
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.ts", 
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "backend", 
    "vite.config.ts", 
    "*.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/types/__tests__/**/*"
  ]
}
