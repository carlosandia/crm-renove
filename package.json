{
  "name": "crm-marketing-supabase-genesis",
  "version": "1.0.0",
  "description": "Sistema CRM Fullstack com React, Node.js e MCP Server para Supabase integrado",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "build:dev": "vite build --mode development",
    "start": "cd backend && npm start",
    "mcp-server": "node supabase-mcp-server.js",
    "mcp-dev": "nodemon supabase-mcp-server.js",
    "mcp-start": "./start-mcp.sh",
    "test-connection": "node test-connection.js",
    "test": "node test-connection.js",
    "test-mcp": "node -e \"const server = require('./supabase-mcp-server.js'); console.log('MCP Server OK!');\"",
    "test-mcp-tools": "node test-mcp-tools.js",
    "setup-supabase": "node setup-supabase-functions.js",
    "verify-all": "npm run test-connection && npm run test-mcp-tools",
    "start-full-system": "./start-full-mcp-system.sh",
    "test-backend": "cd backend && npm test",
    "test-frontend": "cd frontend && npm test",
    "build-all": "cd backend && npm run build && cd ../frontend && npm run build",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules && rm -rf backend/dist frontend/dist"
  },
  "keywords": [
    "crm",
    "react",
    "nodejs",
    "typescript",
    "supabase",
    "mcp",
    "fullstack"
  ],
  "author": "Carlos Andia",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@supabase/supabase-js": "^2.50.0",
    "@types/node": "^24.0.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.5.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lovable-tagger": "^1.1.8",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^6.3.5"
  }
}
