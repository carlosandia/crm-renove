import { Routes, Route, Navigate } from 'react-router-dom'
import AuthProvider from './providers/AuthProvider'
import { ModalProvider } from './contexts/ModalContext'
import LoginForm from './components/LoginForm'
import AppDashboard from './components/AppDashboard'
import PublicFormRenderer from './components/FormBuilder/PublicFormRenderer'
import ToastNotifications from './components/ToastNotifications'
import ErrorBoundary from './utils/errorBoundary'
import { useAuth } from './contexts/AuthContext'
import './App.css'

function ProtectedRoute({ children }: { children: React.ReactNode }) {
  const { user, loading } = useAuth()
  
  console.log('üîç ProtectedRoute - Debug:', { user: user?.email, loading })
  
  if (loading) {
    console.log('‚è≥ Aplica√ß√£o carregando...')
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-32 w-32 border-b-2 border-blue-600"></div>
      </div>
    )
  }
  
  if (!user) {
    console.log('‚ùå Usu√°rio n√£o autenticado, redirecionando para login')
    return <Navigate to="/login" replace />
  }
  
  console.log('‚úÖ Usu√°rio autenticado:', user.email)
  return <>{children}</>
}

function AppRoutes() {
  const { user } = useAuth()
  
  console.log('üöÄ AppRoutes - Renderizando com usu√°rio:', user?.email || 'n√£o logado')
  
  return (
    <Routes>
      <Route path="/form/:slug" element={<PublicFormRenderer />} />
      
      <Route 
        path="/login" 
        element={user ? <Navigate to="/" replace /> : <LoginForm />} 
      />
      <Route 
        path="/" 
        element={
          <ProtectedRoute>
            <AppDashboard />
          </ProtectedRoute>
        } 
      />
      <Route path="*" element={<Navigate to="/" replace />} />
    </Routes>
  )
}

function App() {
  console.log('üéØ App component renderizado')
  
  return (
    <ErrorBoundary>
      <AuthProvider>
        <ModalProvider>
          <div className="min-h-screen bg-gray-50">
            <AppRoutes />
            <ToastNotifications />
          </div>
        </ModalProvider>
      </AuthProvider>
    </ErrorBoundary>
  )
}

export default App
